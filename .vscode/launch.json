    "version": "0.2.0",
    "configurations": [
        {
            // https://t.me/proembedded/645181
            "name": "F4DISCO_gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/tmp/F4DISCO/${workspaceFolderBasename}.elf",
            "cwd": "${workspaceRoot}",
            // "preLaunchTask": "${defaultBuildTask}",
            "stopAtEntry": true,
            // "externalConsole": true,
            // "filterStderr": true,
            // "filterStdout": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "--silent",
            "miDebuggerServerAddress": "localhost:3333",
            "useExtendedRemote": true,
            "serverLaunchTimeout": 1000,
            "debugServerPath": "/usr/bin/openocd",
            
        },
        {
            "name": "STM32F407G-DISC1",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32F407G-DISC1/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                // "b Reset_Handler",
                // "b SystemInit",
                "b main",
                "b SystemClock_Config",
                "b MX_GPIO_Init",
                "monitor reset halt"
                // "c"
            ]
        },
        {
            "name": "F4DISCO",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/F4DISCO/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/hw/F4DISCO/F4DISCO.openocd"],
            "postRestartCommands": [
                "b Reset_Handler",
                "monitor reset halt"
            ]
        },
        {
            "name": "STM32L496G-DISCO",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32L496G-DISCO/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        },
        {
            "name": "IskraJS",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/IskraJS/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/hw/IskraJS.openocd"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        },
        {
            "name": "espruino",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/ref/Espruino/bin/espruino_2v24_stm32f4discovery.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}/ref/Espruino",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        }
    ]
}
